<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_test1"
    tools:context=".StartTest_activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/starttest_banner_yandex"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="3dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_num_quest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/shape_rectangle_r10"
                android:elegantTextHeight="false"
                android:freezesText="false"
                android:gravity="center_horizontal"
                android:padding="10dp"
                tools:text="номер вопроса 0"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

            <ImageView
                android:id="@+id/iv_separator1"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                app:srcCompat="@drawable/shape_separator_hor" />

            <TextView
                android:id="@+id/tv_text_quest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/shape_rectangle_r10"
                android:minHeight="100dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                tools:text="текст вопроса"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_separator2"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                app:srcCompat="@drawable/shape_separator_hor" />

            <LinearLayout
                android:id="@+id/Contain_column_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btn_column1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <Button
                        android:id="@+id/btn_ans1"
                        style="@style/Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3dp"
                        tools:text="Button"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btn_ans2"
                        style="@style/Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3dp"
                        tools:text="Button"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btn_ans3"
                        style="@style/Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3dp"
                        tools:text="Button"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btn_ans4"
                        style="@style/Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3dp"
                        tools:text="Button"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btn_ans5"
                        style="@style/Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3dp"
                        tools:text="Button"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_column2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <Button
                        android:id="@+id/btn_ans6"
                        style="@style/Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3dp"
                        tools:text="Button"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btn_ans7"
                        style="@style/Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3dp"
                        tools:text="Button"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btn_ans8"
                        style="@style/Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3dp"
                        tools:text="Button"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btn_ans9"
                        style="@style/Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3dp"
                        tools:text="Button"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btn_ans10"
                        style="@style/Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3dp"
                        tools:text="Button"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_column3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <Button
                        android:id="@+id/btn_ans11"
                        style="@style/Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3dp"
                        tools:text="Button"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btn_ans12"
                        style="@style/Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3dp"
                        tools:text="Button"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btn_ans13"
                        style="@style/Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3dp"
                        tools:text="Button"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btn_ans14"
                        style="@style/Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3dp"
                        tools:text="Button"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btn_ans15"
                        style="@style/Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3dp"
                        tools:text="Button"
                        android:visibility="visible" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_separator3"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                app:srcCompat="@drawable/shape_separator_hor" />

            <Button
                android:id="@+id/btn_close_testfor_result"
                style="@style/Button_Style_other"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/shape_rectangle_green_r10_stroke"
                android:padding="8dp"
                android:paddingHorizontal="10dp"
                android:text="@string/close_get_result_test"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_close_test"
                style="@style/Button_Style_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/shape_rectangle_r10"
                android:backgroundTint="@color/red_btn"
                android:padding="8dp"
                android:paddingHorizontal="10dp"
                android:text="@string/stop_test"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_end_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test end test"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>



    <com.yandex.mobile.ads.banner.BannerAdView
        android:id="@+id/starttest_banner_yandex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>